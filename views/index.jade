doctype 5
html(lang="en")
	head
		title Formulario Paciente
		link(rel="stylesheet", href="jquery.mobile-1.2.0.css")
	body
		div(id="page1", data-role="page", data-theme="b")
			div(data-role="header", data-theme="a")
				h3 Formulario Paciente
			div(data-role="content")
				h1 Bienvenido #{username.user}
				h2 Completa el formulario
				form(id="survey-form", onsubmit="javascript:survey(this);return false;")
					include form/personaldata
					include form/parentmh
					input(type="submit", value="Submit")
		script(src="./jquery-1.8.3.min.js")
		script(src="./jquery.mobile-1.2.0.min.js")
		script(src="./jquery.validate.js")
		script(src="/socket.io/socket.io.js")
		