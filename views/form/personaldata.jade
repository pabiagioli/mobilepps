div(data-role="collapsible-set", data-collapsed-icon="arrow-r", data-expanded-icon="arrow-d", data-content-theme="b")
	div(data-role="collapsible" ,data-collapsed="true")
		h3 Datos Filiatorios
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="mhnum") Historia Clinica NÂº
				input(type="text", id="mhnum", name="personalDataMHNum", class="required")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="fname") Nombres
				input(type="text", id="fname", name="personalDataFname", class="required")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="lname") Apellido
				input(type="text", id="lname", name="personalDataLname", class="required")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="ssn") DNI
				input(type="text", id="ssn", name="personalDataSSN", class="required")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="bday") Fecha de Nacimiento
				input(type="date", id="bday", name="personalDataBday", class="required", onchange="javascript:getAge(this)")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="age") Edad
				input(type="number", id="age", name="personalDataAge", class="required", readonly="readonly")
		div(data-role="fieldcontain")
			label(for="gender", class="select") Sexo
			select(id="gender", name="personalDataGender", class="required")
				option(value="M") M
				option(value="F") F
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="address") Domicilio
				input(type="text", id="address", name="personalDataAddress", class="required")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="city") Localidad
				input(type="text", id="city", name="personalDataCity", class="required")
