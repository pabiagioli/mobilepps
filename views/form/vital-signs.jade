div(data-role="collapsible-set", data-collapsed-icon="arrow-r", data-expanded-icon="arrow-d", data-content-theme="b")
	div(data-role="collapsible" ,data-collapsed="true")
		h3 Signos Vitales
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				div(class="ui-grid-a")
					div(class="ui-block-a")
						label(for="pulse") Pulso
					div(class="ui-block-b")
						select(name="vitalSignsPulse", id="vitalSignsPulse", data-theme='a', data-role='slider', value="#{typeof(patient) == 'undefined'?'':patient.vitalSignsPulse}")
							option(value='off', selected=(typeof(patient) == 'undefined'?false:patient.vitalSignsPulse=='off')) Regular
							option(value='on', selected=(typeof(patient) == 'undefined'?false:patient.vitalSignsPulse=='on')) Irregular
					div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="freq") Frecuencia
				input(type="number", id="vitalSignsPulseFreq", name="vitalSignsPulseFreq", min="0", step="any", placeholder="lat/min" ,value="#{typeof(patient) == 'undefined'?'':patient.vitalSignsPulseFreq}")
		div(data-role="fieldcontain")
					label(for="bloodPressure") Tension Arterial en mmHg
					div(class="ui-grid-a")
						div(class="ui-block-a")
							input(type="number", id="bloodPressureSist", name="vitalSignsBloodPressureSistolic", min="0", step="any", placeholder="Sistólica", value="#{typeof(patient) == 'undefined'?'':patient.vitalSignsBloodPressureSistolic}")
						div(class="ui-block-b")
							input(type="number", id="bloodPressureDiast", name="vitalSignsBloodPressureDiastolic", min="0", step="any", placeholder="Diastólica", value="#{typeof(patient) == 'undefined'?'':patient.vitalSignsBloodPressureSistolic}")

