div(data-role="collapsible-set", data-collapsed-icon="arrow-r", data-expanded-icon="arrow-d", data-content-theme="b")
	div(data-role="collapsible" ,data-collapsed="true")
		h3 Signos Vitales
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				div(class="ui-grid-a")
					div(class="ui-block-a")
						label(for="pulse") Pulso
					div(class="ui-block-b")
						select(name="vitalSigns.pulse", id="pulse", data-theme='a', data-role='slider')
							option(value='off') Regular
							option(value='on') Irregular
					div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="freq") Frecuencia
				input(type="text", id="freq", name="vitalSigns.freq", class="required")
		div(data-role="fieldcontain")
					label(for="bloodPressure") Tension Arterial en mmHg
					div(class="ui-grid-a")
						div(class="ui-block-a")
							input(type="number", id="bloodPressureSist", name="vitalSigns.bloodPressureIni", class="required", placeholder="Sistólica")
						div(class="ui-block-b")
							input(type="number", id="bloodPressureDiast", name="vitalSigns.bloodPressureEnd", class="required", placeholder="Diastólica")

