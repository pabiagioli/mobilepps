div(data-role="collapsible-set", data-collapsed-icon="arrow-r", data-expanded-icon="arrow-d", data-content-theme="b")
	div(data-role="collapsible" ,data-collapsed="true")
		h3 Medidas Antropom√©tricas
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="sizeNum") Talla
				input(type="number", id="sizeNum", name="measuresSizeNum", placeholder="m", onchange="javascript:getIMC();", min="0", step="any",  value="#{typeof(patient) == 'undefined'?'':patient.measuresSizeNum}")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="waist") Cintura
				input(type="number", id="waist", name="measuresWaist", placeholder="cm", min="0", step="any",  value="#{typeof(patient) == 'undefined'?'':patient.measuresWaist}")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="weight") Peso
				input(type="number", id="weight", name="measuresWeight", placeholder="kg", onchange="javascript:getIMC();", min="0", step="any",  value="#{typeof(patient) == 'undefined'?'':patient.measuresWeight}")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="imc") Indice Masa Corporal
				input(type="number", id="imc", name="measuresIMC", placeholder="kg/m2", readonly="readonly",  value="#{typeof(patient) == 'undefined'?'':patient.measuresIMC}")