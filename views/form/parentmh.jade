div(data-role="collapsible-set", data-collapsed-icon="arrow-r", data-expanded-icon="arrow-d", data-content-theme="b")
	div(data-role="collapsible" ,data-collapsed="true")
		h3 Antecedentes Paternos
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				select(name="fatherAlive", onchange="javascript:toggleCOD(this,1);",  value="#{typeof(patient) == 'undefined'?'':patient.fatherAlive}")
					option(value="true") Vivo
					option(value="false") Fallecido
		div(data-role="fieldcontain", id="div-cod-1")
			fieldset(data-role="controlgroup")
				label(for="cod1") Causa de Muerte
				input(type="text", id="cod1", name="fatherCOD",  value="#{typeof(patient) == 'undefined'?'':patient.fatherCOD}" )
		div(data-role="fieldcontain", data-theme="c")
			fieldset(data-role="controlgroup")
				label(for="fatherDBT") DBT
				input(type="checkbox",id="fatherDBT", name="fatherDBT",  checked=(typeof(patient) == 'undefined'?false:patient.fatherDBT))
				label(for="fatherHTA") HTA
				input(type="checkbox", id="fatherHTA",name="fatherHTA",  checked=(typeof(patient) == 'undefined'?false:patient.fatherHTA))
				label(for="fatherDislipedemia") Dislipedemia
				input(type="checkbox", id="fatherDislipedemia", name="fatherDislipedemia",  checked=(typeof(patient) == 'undefined'?false:patient.fatherDislipedemia))
				label(for="fatherChagas") Chagas
				input(type="checkbox", id="fatherChagas", name="fatherChagas",  checked=(typeof(patient) == 'undefined'?false:patient.fatherChagas))
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="fatherThyroid") Tiroides
				input(type="text", id="fatherThyroid", name="fatherThyroid",  value="#{typeof(patient) == 'undefined'?'':patient.fatherThyroid}")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="fatherOthers") Otros
				input(type="text", id="fatherOthers", name="fatherOthers",  value="#{typeof(patient) == 'undefined'?'':patient.fatherOthers}")
