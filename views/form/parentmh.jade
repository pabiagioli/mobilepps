div(data-role="collapsible-set", data-collapsed-icon="arrow-r", data-expanded-icon="arrow-d", data-content-theme="b")
	div(data-role="collapsible" ,data-collapsed="true")
		h3 Antecedentes Paternos
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				select(name="alive", class="required", onchange="javascript:toggleCOD(this,1);")
					option(value="true") Vivo
					option(value="false") Fallecido
		div(data-role="fieldcontain", id="div-cod-1")
			fieldset(data-role="controlgroup")
				label(for="cod1") Causa de Muerte
				input(type="text", id="cod1", name="cod", class="required")
		div(data-role="fieldcontain", data-theme="c")
			fieldset(data-role="controlgroup")
				label(for="dbt") DBT
				input(type="checkbox",id="dbt", name="dbt")
				label(for="hta") HTA
				input(type="checkbox", id="hta",name="hta")
				label(for="dislipedemia") Dislipedemia
				input(type="checkbox", id="dislipedemia", name="dislipedemia")
				label(for="chagas") Chagas
				input(type="checkbox", id="chagas", name="chagas")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="thyroid") Tiroides
				input(type="text", id="thyroid", name="thyroid", class="required")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="others") Otros
				input(type="text", id="others", name="others", class="required")
