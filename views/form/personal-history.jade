div(data-role="collapsible-set", data-collapsed-icon="arrow-r", data-expanded-icon="arrow-d", data-content-theme="b")
	div(data-role="collapsible" ,data-collapsed="true")
		h3 Antecedentes Personales
		div(data-role="fieldcontain", data-theme="c")
			fieldset(data-role="controlgroup")
				label(for="personalMHDBT") DBT
				input(type="checkbox",id="personalMHDBT", name="personalMHDBT", checked="#{typeof(patient) == 'undefined'?'':patient.personalMHDBT}")
				label(for="personalMHHTA") HTA
				input(type="checkbox", id="personalMHHTA",name="personalMHHTA", checked="#{typeof(patient) == 'undefined'?'':patient.personalMHHTA}")
				label(for="personalMHDislipedemia") Dislipedemia
				input(type="checkbox", id="personalMHDislipedemia", name="personalMHDislipedemia", checked="#{typeof(patient) == 'undefined'?'':patient.personalMHDislipedemia}")
				label(for="personalMHChagas") Chagas
				input(type="checkbox", id="personalMHChagas", name="personalMHChagas", checked="#{typeof(patient) == 'undefined'?'':patient.personalMHChagas}")
				label(for="personalMHArhythmia") Arritmias
				input(type="checkbox", id="personalMHArhythmia", name="personalMHArhythmia", checked="#{typeof(patient) == 'undefined'?'':patient.personalMHArhythmia}")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="personalMHThyroid") Tiroides
				input(type="text", id="personalMHThyroid", name="personalMHThyroid", value="#{typeof(patient) == 'undefined'?'':patient.personalMHThyroid}")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="personalMHOthers") Otros
				input(type="text", id="personalMHOthers", name="personalMHOthers", value="#{typeof(patient) == 'undefined'?'':patient.personalMHOthers}")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="personalMHTreatment") Tratamientos
				select(name="personalMHTreatment", id="personalMHTreatment", data-theme='a', data-role='slider', onchange="javascript:toggleTreatment(this);", value="#{typeof(patient) == 'undefined'?'':patient.personalMHTreatment}")
					option(value='off', selected=(typeof(patient) == 'undefined'?false:patient.personalMHTreatment=='off')) No
					option(value='on', selected=(typeof(patient) == 'undefined'?false:patient.personalMHTreatment=='on')) Si
			fieldset(data-role="controlgroup", id="div-treatdesc")
				label(for="personalMHTreatDesc") Descripci칩n del Tratamiento
				input(type="text", id="personalMHTreatDesc", name="personalMHTreatDesc", value="#{typeof(patient) == 'undefined'?'':patient.personalMHTreatDesc}")
		div(data-role="fieldcontain")
			fieldset(data-role="controlgroup")
				label(for="smoking") Tabaquismo
				select(name="personalMHSmoking", id="smoking", data-theme='a', data-role='slider', onchange="javascript:toggleTobacco(this);", value="#{typeof(patient) == 'undefined'?'':patient.personalMHSmoking}")
					option(value='off', selected=(typeof(patient) == 'undefined'?false:patient.personalMHSmoking=='off')) No
					option(value='on', selected=(typeof(patient) == 'undefined'?false:patient.personalMHSmoking=='on')) Si
			fieldset(data-role="controlgroup", id="div-tobacco-desc")
				label(for="smokeDay") cigarrillos/dia
				input(type="number", id="smokeDay", name="personalMHSmokeDay",  placeholder="cig/dia", value="#{typeof(patient) == 'undefined'?'':patient.personalMHSmokeDay}")
				label(for="smokeYears") a침os
				input(type="number", id="smokeYears", name="personalMHSmokeYears",  placeholder="a침os",value="#{typeof(patient) == 'undefined'?'':patient.personalMHSmokeYears}")
				label(for="smokeAbstinence") abstinencia
				input(type="number", id="smokeAbstinence", name="personalMHSmokeAbstinence", placeholder="a침os", value="#{typeof(patient) == 'undefined'?'':patient.personalMHSmokeAbstinence}")
